    <profiles>
        <profile>
            <id>deploy-module-wildfly</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <copy todir="${jboss.home}/modules/system/layers/base/${module.path}">
                                            <fileset dir="${project.build.directory}/module"/>
                                        </copy>
                                    </tasks>
                                </configuration>
                            </execution>
                            <execution>
                                <id>undeploy</id>
                                <phase>clean</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <delete failonerror="false" dir="${jboss.home}/modules/system/layers/base/${module.path}"/>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
