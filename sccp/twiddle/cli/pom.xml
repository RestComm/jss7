<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mobicents.protocols.ss7.sccp.tools.twiddle</groupId>
		<artifactId>cli-twiddle-parent</artifactId>
		<version>1.0.0.BETA6</version>
	</parent>


	<artifactId>cli-twiddle</artifactId>


	<name>Mobicents SS7 :: SCCP :: Twiddle CLI :: ${pom.artifactId}</name>

	<properties>
		<tool.directory>${project.build.directory}/release</tool.directory>
		<tool.directory.lib>${tool.directory}/lib</tool.directory.lib>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.jboss.jbossas</groupId>
			<artifactId>jboss-as-console</artifactId>
		</dependency>
		<dependency>
			<groupId>org.mobicents.protocols.ss7.sccp</groupId>
			<artifactId>sccp-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.mobicents.protocols.ss7.sccp</groupId>
			<artifactId>sccp-impl</artifactId>
		</dependency>
		<!-- move those to parent -->
		<dependency>
			<groupId>urbanophile</groupId>
			<artifactId>java-getopt</artifactId>
		</dependency>
		<dependency>
			<groupId>jboss.jbossas.core-libs</groupId>
			<artifactId>jboss-jmx</artifactId>
		</dependency>
		<dependency>
			<groupId>jboss.jbossas.core-libs</groupId>
			<artifactId>jboss-common-client</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.naming</groupId>
			<artifactId>jnp-client</artifactId>
		</dependency>
		<dependency>
			<groupId>oswego-concurrent</groupId>
			<artifactId>concurrent</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.jbossas</groupId>
			<artifactId>jboss-as-server</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.jbossas</groupId>
			<artifactId>jboss-as-server</artifactId>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-serialization</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.jbossas</groupId>
			<artifactId>jboss-as-server</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.javaee</groupId>
			<artifactId>jboss-javaee</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.security</groupId>
			<artifactId>jboss-security-spi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.security</groupId>
			<artifactId>jbosssx-client</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jboss.integration</groupId>
			<artifactId>jboss-transaction-spi</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<goals>
							<goal>run</goal>
						</goals>
						<phase>install</phase>
						<inherited>false</inherited>
						<configuration>
							<tasks>
								<copy todir="${tool.directory}" verbose="true">
									<fileset dir="script" includes="*.sh" />
									<fileset dir="script" includes="*.bat" />
								</copy>
								<copy todir="${tool.directory.lib}" verbose="true">
									<fileset dir="script" includes="*.properties" />
								</copy>
							</tasks>
						</configuration>
					</execution>
				</executions>

			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-dependency-jar</id>
						<phase>install</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>

							<!-- Mobicents part -->
							<artifactItems>
								<artifactItem>
									<groupId>${pom.groupId}</groupId>
									<artifactId>${pom.artifactId}</artifactId>
									<version>${pom.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										cli-twiddle.jar
									</destFileName>
								</artifactItem>

								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.sccp</groupId>
									<artifactId>sccp-api</artifactId>
									<version>${pom.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										sccp-api.jar
									</destFileName>
								</artifactItem>

								<artifactItem>
									<groupId>org.mobicents.protocols.ss7.sccp</groupId>
									<artifactId>sccp-impl</artifactId>
									<version>${pom.version}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										sccp-impl.jar
									</destFileName>
								</artifactItem>

								<!-- Now twiddle part -->


								<artifactItem>
									<groupId>org.jboss.jbossas</groupId>
									<artifactId>jboss-as-console</artifactId>
									<classifier>twiddle</classifier>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										twiddle.jar
									</destFileName>
								</artifactItem>

								<artifactItem>
									<groupId>urbanophile</groupId>
									<artifactId>java-getopt</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										getopt.jar
									</destFileName>
								</artifactItem>

								<artifactItem>
									<groupId>log4j</groupId>
									<artifactId>log4j</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										log4j.jar
									</destFileName>
								</artifactItem>

								<artifactItem>
									<groupId>jboss.jbossas.core-libs</groupId>
									<artifactId>jboss-jmx</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jboss-jmx.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>jboss.jbossas.core-libs</groupId>
									<artifactId>jboss-common-client</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jboss-common-client.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.naming</groupId>
									<artifactId>jnp-client</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jnp-client.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>oswego-concurrent</groupId>
									<artifactId>concurrent</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										concurrent.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.jbossas</groupId>
									<artifactId>jboss-as-server</artifactId>
									<classifier>jmx-invoker-adaptor-client</classifier>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jmx-invoker-adaptor-client.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.jbossas</groupId>
									<artifactId>jboss-as-server</artifactId>
									<classifier>client</classifier>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jmx-client.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>jboss</groupId>
									<artifactId>jboss-serialization</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jboss-serialization.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.jbossas</groupId>
									<artifactId>jboss-as-server</artifactId>
									<classifier>jboss-minimal</classifier>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jboss-minimal.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.javaee</groupId>
									<artifactId>jboss-javaee</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										javaee-api.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.security</groupId>
									<artifactId>jboss-security-spi</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jboss-security-spi.jar
									</destFileName>
								</artifactItem>
								<artifactItem>
									<groupId>org.jboss.security</groupId>
									<artifactId>jbosssx-client</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jbossx-security-client.jar
									</destFileName>
								</artifactItem>




								<artifactItem>
									<groupId>org.jboss.integration</groupId>
									<artifactId>jboss-transaction-spi</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										jboss-transaction-spi.jar
									</destFileName>
								</artifactItem>




								<artifactItem>
									<groupId>dom4j</groupId>
									<artifactId>dom4j</artifactId>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>
										${tool.directory.lib}
									</outputDirectory>
									<destFileName>
										dom4j.jar  
									</destFileName>
								</artifactItem>
							</artifactItems>

						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
